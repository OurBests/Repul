@{
    Layout = "_LoginLayout";
}
@model LoginStepOneModel

<style>
    body,
    html {
        margin: 0;
        padding: 0;
        height: 100%;
        background: #66BB6A !important;
    }
</style>

<form id="login_form" method="post">
    <input type="hidden" name="Phone" value="@Model.Phone" />
    <div id="login_form_box" class="justify-content-center form_container">
        <div style="text-align: center;margin-bottom: 10px;">کد ارسال شده را وارد نمایید</div>
        <div class="input-group mb-3" style="width:250px;margin:auto;">
            <input type="text" name="SecureCode" id="SecureCode" class="form-control input_user" maxlength="6" style="text-align:center;" tabindex="0">
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3 login_container">
        <button type="submit" name="button" id="submit_btn" class="btn login_btn" style="opacity:0;transition:opacity 0.3s;">ورود</button>
    </div>
</form>
<script>
    $("#SecureCode").focus();
    $("#SecureCode").keyup(function () {
        if ($("#SecureCode").val().length == 6) {
            $("#submit_btn").css("opacity", 1);
        } else {
            $("#submit_btn").css("opacity", 0);
        }
    });
    $("#login_form").submit(function () {
        if (!$("#SecureCode").val()) {
            notify('', 'کد ارسال شده را وارد نمایید!', 'error');
            return false;
        }
        if ($("#SecureCode").val().length < 6) {
            notify('', 'کد وارد شده صحیح نمیباشد!', 'error');
            return false;
        }

    });
</script>
